<mujoco model="materials">
    <compiler meshdir="assets" texturedir="assets"/>

    <asset>
        <texture name="grid_texture" type="2d" file="grid.png"/>
        <material name="RedEmissive" rgba="1 0 0 1" emission="0.5"/>
        <material name="GreenSpecular" rgba="0 1 0 1" specular="0.8"/>
        <material name="BlueMetallic" rgba="0 0 1 1" metallic="0.8" shininess="0.3" specular="0"/>
        <material name="Grid" texture="grid_texture" specular="0"/>
        <mesh name="box" file="box.obj" scale="0.2 0.2 1"/>
        <!-- Unnamed texture for test -->
        <texture type="2d" file="grid.png"/>
        <material name="UnnamedTexture" texture="grid" specular="0"/>
        <material name="Gray" rgba="0.7 0.7 0.7 1" emission="0.0"/>
        <material name="DarkGreen" rgba="0.1 0.7 0.0 1" emission="0.1"/>
        <material name="SkyBlue" rgba="0.3 0.8 0.9 1" emission="0.2"/>
    </asset>

    <worldbody>
        <geom type="plane" size="0 0 .1" pos="0 0 -.1"/>
        <geom type="capsule" material="RedEmissive" size="0.1" fromto="0 0 0 0 0 1"/>
        <geom type="box" material="GreenSpecular" size="0.1" fromto="0 1 0 0 1 1"/>
        <geom name="TexturedBox" type="mesh" mesh="box" material="Grid" pos="0 2 0.5"/>
        <geom type="cylinder" material="BlueMetallic" size="0.1" fromto="0 3 0 0 3 1"/>
        <geom type="box" material="UnnamedTexture" size="0.1 0.1 0.5" pos="0 4 0.5"/>
        <geom type="box" material="Gray" size="0.1 0.1 0.5" pos="0 5 0.5"/>
        <geom type="box" material="DarkGreen" size="0.1 0.1 0.5" pos="0 6 0.5"/>
        <geom type="box" material="SkyBlue" size="0.1 0.1 0.5" pos="0 7 0.5"/>
    </worldbody>
</mujoco>
